{
    "manifest_version": 3,
    "name": "Image Scout â€“ Click to Inspect & Download",
    "description": "Click any image to see dimensions, file size/type, and download in a custom size.",
    "version": "1.0.0",
    "action": 
    {
        "default_popup": "popup.html", 
        "default_title": "Image Scout" 
    },
    "background": 
    { 
        "service_worker": "background.js" 
    },
    "permissions": 
    [
        "activeTab",
        "scripting",
        "downloads",
        "storage"
    ],
    "host_permissions": 
    ["*://*/*"],
    "icons": 
    {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}